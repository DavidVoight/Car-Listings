<% if @manufacturer.errors.any? %>
  <% @manufacturer.errors.full_messages.each do |msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
<% end %>

<%= form_for(@manufacturer) do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :country %>
<%= f.text_field :country %>

<%= f.submit %>
<% end %>

<p><%= link_to 'Back to Cars', cars_path %></p>
