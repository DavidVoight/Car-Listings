<h1>Add a Car</h1>

  <% if @car.errors.any? %>
    <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @car do |f| %>

    <%= f.label :manufacturer_id, "Manufacturer" %>
    <%= f.collection_select(:manufacturer_id, Manufacturer.all, :id, :name) %>

    <%= f.label :color %>
    <%= f.text_field :color %>

    <%= f.label :year %>
    <%= f.text_field :year %>

    <%= f.label :mileage %>
    <%= f.text_field :mileage %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit 'Add Car' %>

<% end %>

<%= link_to 'Back to Cars', cars_path %>
